"std.plast"

plast
  this.file = ""
  this.lineNum = 0

plast err string
  "Line" + this.lineNum + ": " + arg print

plast compile string
  this.file = arg
  code = this.file readFileSync
  code tok "\n" each line
    this.lineNum += 1
    shift = line getLeftShift
    line+";" print
    shift % 2 != 0
      return this err "incorrect line shift"
    "over" print


main
  plast plast
  plast compile "tests/1.plast"
